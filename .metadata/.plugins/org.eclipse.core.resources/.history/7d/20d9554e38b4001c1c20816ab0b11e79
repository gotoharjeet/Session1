			System.out.println("{");
		    String syso1="System.out.println("+"Hello"+")";
			System.out.println(syso1);	
		    System.out.println("}");
			System.out.println("else");							
			System.out.println("{");				
		    String syso2="System.out.println("+"Hi"+")";
			System.out.println(syso2);
			System.out.println("}");	

			System.out.println("A:Hello   B:Hi   C:CE   D:RE");
			option=obj.nextInt();
			System.out.println("Selected Option :"+option);
			
			//check the selection
			if(option == 'B' )
				correct_count+=20;
			
			

		}
		
		public void sixthProblem()
		{
			System.out.println("boolean b=false");

			System.out.println("if(b==false)");
			System.out.println("{");
		    String syso1="System.out.println("+"Hello"+")";
			System.out.println(syso1);	
		    System.out.println("}");
			System.out.println("else");							
			System.out.println("{");				
		    String syso2="System.out.println("+"Hi"+")";
			System.out.println(syso2);
			System.out.println("}");	

			System.out.println("A:Hello   B:Hi   C:CE   D:RE");
			option=obj.nextInt();
			System.out.println("Selected Option :"+option);
			
			//check the selection
			if(option == 'A' )
				correct_count+=20;
		}
		
		public static void main(String[] args) 
		{
			IfQuiz ifquiz = new IfQuiz();
			ifquiz.firstProblem();
			ifquiz.secondProblem();
			//ifquiz.thirdProblem();
			//ifquiz.fourthProblem();
			//ifquiz.fifthProblem();
			
		}
	

}
